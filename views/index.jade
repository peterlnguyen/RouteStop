extends layout

block prepend head

block append content
	div#content_header
		h1= title
		p Plan your roadtrip now!

	div#map_canvas(style:'width:500px; height: 350px;'')

	div#main_menu
		form(method='post', action='main_menu')
			label(for='start') Start:
			input(type='text, name='start', id='start')        
			label(for='end') End:
			input(type='text', name='end', id='end')
			label(for='stop') Stop: 
			input(type='text', name='place', id='place', value='in-n-out burger')
			input(type='button', onclick='pushWaypoint()', value='Add Stop', data-inline='true')
			input(type='submit', name='submit', value='Submit', data-inline='true').submit-button

	div#directions_panel
